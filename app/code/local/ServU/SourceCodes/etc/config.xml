<config>    <modules>        <ServU_SourceCodes>            <version>0.1.0</version> 	</ServU_SourceCodes>    </modules>    <global>        <resources>            <servu_sourcecodes_setup>                <setup>                    <module>ServU_SourceCodes</module>                    <class>ServU_SourceCodes_Model_Mysql4_Setup</class>                </setup>                <connection>                    <use>core_setup</use>                </connection>            </servu_sourcecodes_setup>            <servu_sourcecodes_write>                <connection>                    <use>core_write</use>                </connection>            </servu_sourcecodes_write>            <servu_sourcecodes_read>                <connection>                    <use>core_read</use>                </connection>            </servu_sourcecodes_read>        </resources>        <models>            <sourcecodes>                <class>Mage_Sales_Model</class>                <resourceModel>sourcecodes_mysql4</resourceModel>            </sourcecodes>            <sourcecodes_mysql4>                <class>ServU_SourceCodes_Model_Mysql4</class>                <entities>                    <order><table>sales_flat_order</table></order>                </entities>            </sourcecodes_mysql4>        </models>    </global>    <frontend>        <events>              <checkout_type_onepage_save_order>                  <observers>                      <ServU_SourceCodes_Onepage>                          <type>singleton</type>                          <class>ServU_SourceCodes_Model_Observer</class>                            <method>setSourceCode</method>                                </ServU_SourceCodes_Onepage>                              </observers>              </checkout_type_onepage_save_order>          </events>      </frontend></config>
<config>
    <tabs>
        <shoppingfeeds translate="label" module="shoppingfeeds_feed">
            <label>Shopping Feeds</label>
            <sort_order>300</sort_order>
        </shoppingfeeds>
    </tabs>
    <sections>
         <thefindfeed translate="label" module="shoppingfeeds_feed">
            <label>TheFind Feed</label>
            <tab>shoppingfeeds</tab>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <name translate="label">
                            <label>FTP Settings</label>
                        </name>
                        <thefindftp_server translate="label">
                            <label>FTP Server</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </thefindftp_server>
                        <thefindftp_path translate="label">
                            <label>FTP Path</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </thefindftp_path>
                        <thefindftp_user translate="label comment">
                            <label>FTP User</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[In order to access your FTP account information, you must first register and verify your store in TheFind Merchant Center. <a href="https://merchant.thefind.com/mc/claim.fhtml" target="_blank">Get Started</a> | <a href="https://merchant.thefind.com/doc/TheFind_Product_Feed_Specification1_1.pdf" target="_blank">FAQs</a>]]></comment>
                        </thefindftp_user>
                        <thefindftp_password translate="label">
                            <label>FTP Password</label>
                            <frontend_type>password</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </thefindftp_password>
                        <thefindfeed_filename translate="label">
                            <label>TheFind Feed Filename</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </thefindfeed_filename>
                        <thefindcron_frequency translate="label comment">
                            <label>Cron Frequency</label>
                            <frontend_type>select</frontend_type>
                            <source_model>shoppingfeeds_feed/adminhtml_system_source_cron_frequency</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </thefindcron_frequency>
                        <thefindcron_hours translate="label comment">
                            <label>Cron Hour</label>
                            <frontend_type>select</frontend_type>
                            <source_model>shoppingfeeds_feed/adminhtml_system_source_cron_hours</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </thefindcron_hours>
                        <thefindcron_minutes translate="label comment">
                            <label>Cron Minute</label>
                            <frontend_type>select</frontend_type>
                            <source_model>shoppingfeeds_feed/adminhtml_system_source_cron_minutes</source_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </thefindcron_minutes>                        
                    </fields>
                </settings>
            </groups>
        </thefindfeed>
        
        
        <bingfeed translate="label" module="shoppingfeeds_feed">
            <label>Bing Feed</label>
            <tab>shoppingfeeds</tab>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <name translate="label">
                            <label>FTP Settings</label>
                        </name>
                        <bingftp_server translate="label">
                            <label>FTP Server</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </bingftp_server>
                        <bingftp_path translate="label">
                            <label>FTP Path</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </bingftp_path>
                        <bingftp_user translate="label comment">
                            <label>FTP User</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[In order to access your FTP account information, you must first register and verify your store with Bing.<br/> <a href="https://secure.bingads.microsoft.com/?mkt=en-us&adv_market=en-us&s_int=en_us_acsignup" target="_blank">Get Started</a> | <a href="http://advertise.bingads.microsoft.com/en-us/bing-merchant-faqs#6" target="_blank">FAQs</a>]]></comment>
                        </bingftp_user>
                        <bingftp_password translate="label">
                            <label>FTP Password</label>
                            <frontend_type>password</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </bingftp_password>
                        <bingfeed_filename translate="label">
                            <label>Bing Feed Filename</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </bingfeed_filename>
                        <bingcron_frequency translate="label comment">
                            <label>Cron Frequency</label>
                            <frontend_type>select</frontend_type>
                            <source_model>shoppingfeeds_feed/adminhtml_system_source_cron_frequency</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </bingcron_frequency>
                        <bingcron_hours translate="label comment">
                            <label>Cron Hour</label>
                            <frontend_type>select</frontend_type>
                            <source_model>shoppingfeeds_feed/adminhtml_system_source_cron_hours</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </bingcron_hours>
                        <bingcron_minutes translate="label comment">
                            <label>Cron Minute</label>
                            <frontend_type>select</frontend_type>
                            <source_model>shoppingfeeds_feed/adminhtml_system_source_cron_minutes</source_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </bingcron_minutes>
                    </fields>
                </settings>
            </groups>
        </bingfeed>        
    </sections>
</config>

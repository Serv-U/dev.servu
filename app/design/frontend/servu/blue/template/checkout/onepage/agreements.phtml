<form action="" id="checkout-agreements" onsubmit="return false;">

<ol class="checkout-source-codes">  
    <li>
        <label for="servuOrderSourceCodes" style="display: block; margin-bottom: 9px;"><?php echo $this->__('How did you hear about us?'); ?><em style="color:red;">*</em></label>
        <select name="servuOrderSourceCodes" id="servuOrderSourceCodes">
            <option value=''><?php echo $this->__('Please select an option'); ?></option>
            <option value="ISSLM"><?php echo $this->__('Social Media'); ?></option>
            <option value="ISEML"><?php echo $this->__('Email'); ?></option>

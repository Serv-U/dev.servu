<div id="price-range-slider"></div>
<?php $currencySymbol = Mage::app()->getLocale()->currency(Mage::app()->getStore()->getCurrentCurrencyCode())->getSymbol() ?>

<?php
    $currentMinPrice = $this->getFilter()->getAppliedPriceMin();
    $currentMaxPrice = $this->getFilter()->getAppliedPriceMax();
    
    if($currentMinPrice == ''):
        $currentMinPrice = $this->getFilter()->getMinPriceInt();
    endif;

    if($currentMaxPrice == ''):
        $currentMaxPrice = $this->getFilter()->getMaxPriceInt();
    endif;
?>

<div class="price-label left"><?php echo $currencySymbol ?><span id="pricing_low_label"><?php echo floor($currentMinPrice) ?></span></div>
<div class="price-label right"><?php echo $currencySymbol ?><span id="pricing_high_label"><?php echo ceil($currentMaxPrice) ?></span></div>
<div style="clear:both;"></div>

<input type="hidden" id="pricing_low_input" name="price[0]" value="<?php echo $currentMinPrice ?>" />
<input type="hidden" id="pricing_high_input" name="price[1]" value="<?php echo $currentMaxPrice ?>" />

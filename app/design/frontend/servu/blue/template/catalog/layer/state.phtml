<?php
/**
 * Category layered navigation state
 *
 * @see Mage_Catalog_Block_Layer_State
 */
?>
<?php $_filters = $this->getActiveFilters() ?>
<?php if(!empty($_filters)): ?>
<div class="currently">
    <p class="block-subtitle"><strong><?php echo $this->__('Currently Shopping By') ?></strong></p>
    <ol>
    <?php $clearMatrix = array();?>
    <?php foreach ($_filters as $_filter): ?>

        <li>
            <div><span class="label"><?php echo $this->__($_filter->getName()) ?>:</span> <span class="value"><?php echo $this->stripTags($_filter->getLabel()) ?></span></div>
            <?php
                $matrixKey = $_filter->getFilter()->getRequestVar();
                
                if (array_key_exists($matrixKey, $clearMatrix) && $matrixKey != 'price') {
                    $clearMatrix[$matrixKey]++;
                } else {
                    $clearMatrix[$matrixKey] = 0;
                }
                
                $valueArray = explode(',',$_filter->getValueString());
                $additionalParameter = $matrixKey.'[]='.$valueArray[$clearMatrix[$matrixKey]];
                if($matrixKey == 'price'){
                    $additionalParameter = $matrixKey;
                }
                $clearLinkUrl = $_filter->getClearLinkUrl();
                
                if ($clearLinkUrl):
            ?>
                <a class="btn-previous" href="<?php echo $_filter->getRemoveUrl() ?>" title="<?php echo $this->__('Previous') ?>"><?php echo $this->__('Previous') ?></a>
                <a class="btn-remove" title="<?php echo $this->escapeHtml($_filter->getFilter()->getClearLinkText()) ?>" href="<?php echo $clearLinkUrl.'?'.$additionalParameter ?>"><?php echo $this->escapeHtml($_filter->getFilter()->getClearLinkText()) ?></a>
            <?php else: ?>
                <a class="btn-remove" href="<?php echo $_filter->getRemoveUrl().'?'.$additionalParameter ?>" title="<?php echo $this->__('Remove This Item') ?>"><?php echo $this->__('Remove This Item') ?></a>
            <?php endif; ?>
        </li>
    <?php endforeach; ?>
    </ol>
</div>
<?php endif; ?>
